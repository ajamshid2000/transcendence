{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",

    "baseUrl": ".",
    "paths": {
      "@services/*": ["services/*"],
      "@config/*": ["config/*"],
      "@db/*": ["database/*"]
    },

    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts"
  ]
}
